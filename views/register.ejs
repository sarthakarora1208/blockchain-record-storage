<%- include("partials/header2") %>
    <!-- FORM -->
    <div class="form1" style="margin: 20px;">
        <div class="ui raised segment dimmable">
            <div class="ui inverted dimmer">
                <div class="content">
                    <div class="ui text loader">Loading</div>
                </div>
            </div>
            <h2 class="ui header"><i aria-hidden="true" class="user icon"></i>Register</h2>
            <p style="color: black;"> Log in to see the data of your hospital and check the updates.</p>
            <div class="ui divider"></div>
            <form id="myForm" action="/" class="ui form">
                <div class="field">
                    <div class="field"><label class="ui header">Name</label>
                        <div class="ui left icon input"><input style="padding: 0;" aria-invalid="true" placeholder="Enter Full Name" name="name" type="text" value=""><i aria-hidden="true" class="user icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Email Address</label>
                        <div class="ui left icon input"><input id="email" style="padding: 0;" aria-invalid="true" placeholder="Enter Email" name="email" type="email" value=""><i aria-hidden="true" class="mail icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Password</label>
                        <div class="ui left icon input"><input id="pwd" style="padding: 0;" aria-invalid="true" placeholder="Enter Password" name="password" type="password" value=""><i aria-hidden="true" class="lock icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Confirm Password</label>
                        <div class="ui left icon input"><input style="padding: 0;" aria-invalid="true" placeholder="Re-enter Password" name="passwordConfirmation" type="password" value=""><i aria-hidden="true" class="lock icon"></i></div>
                    </div>
                </div>
                <div id="privField" style="display: none;" class="field">
                    <div class="field"><label class="ui header">Private Key</label>
                        <div class="ui left icon input"><input id="privKey" style="padding: 0;" aria-invalid="true" placeholder="Enter Pivate key" name="privKey" type="text" value=""><i aria-hidden="true" class="key icon"></i></div>
                    </div>
                </div>
                <div class="field ui header" style="color: black;"><b>User Role</b></div>
                <div class="inline fields">
                    <div class="field">
                        <div class="ui checked radio checkbox"><input id="user" name="role" type="radio" value="user" checked=""><label for="user">User</label></div>
                    </div>
                    <div class="field">
                        <div class="ui radio checkbox"><input id="owner" name="role" type="radio" value="owner"><label for="Owner">Owner</label></div>
                    </div>
                    <div class="field">
                        <div class="ui radio checkbox"><input id="admin" name="role" type="radio" value="admin"><label for="Admin">Admin</label></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field">
                        <div class="ui checkbox"><input id="box" type="checkbox"><label for="privKey"><i style="color: red;"class="key icon"></i> PRIVATE KEY</label></div>
                    </div>
                </div>
                <div onclick="register()" class="ui primary button">Register</div>
                <div style="margin: 0 auto;" class="ui basic modal">
                    <div class="ui icon header">
                        <i class="hospital icon"></i> YOUR <span style="color: red;">KEYS</span>
                    </div>
                    <div style="text-align: center;" class="content">
                        <p>These are your keys please click a picture <i style="color: red;" class="camera icon"></i>and store them securely for future reference.</p>
                        <label style="color: gold;" class="ui header">Private Key</label>
                        <p id="privateKeyDisplay"></p>
                        <label style="color: gold;" class="ui header">Address</label>
                        <p id="address"></p>
                    </div>
                    <div style="text-align: center;" class="actions">
                        <button class="ui green basic ok inverted  button" onclick="formSubmit()"><i class="checkmark icon"></i>Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


    </header>

    <%- include("partials/registerfooter") %>
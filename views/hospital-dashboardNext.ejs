<%- include("partials/dashboardHeader") %>

    <h3 style="margin-top: 50px;font-size: 2.5em; text-align: center;" class="ml15">
        <span style="color:#5CDB95; letter-spacing: normal;" class="word"><%= hospital.name %> </span>
        <span style="color:white; letter-spacing: normal;" class="word">Hospital</span>
    </h3>
    <div class="tab">
        <table style="background-color: white; margin: 0 auto; border: 1px solid black; border-radius: 15px;" class="striped centered responsive-table">
            <thead>
                <tr>
                    <th style="color: orangered;">Patient Name</th>
                    <th style="color: #379683;">Status of Request</th>
                    <th style="color: brown;"> Edit Request</th>
                </tr>
            </thead>

            <tbody>
                <% pdRequests.map(pdrequest => { %>
                    <tr>
                        <td>
                            <%= pdrequest.user.name %>
                        </td>
                        <td>
                            <% if(pdrequest.isApproved){%>
                                <span style="color:  #379683;">
                                    <%= pdrequest.isApproved %>
                                </span>
                                <% } else{ %>
                                    <span style="color: red;">
                                        <%= pdrequest.isApproved %>
                                    </span>
                                    <% } %>
                        </td>
                        <td>
                            <% if(!pdrequest.isApproved) { %>
                                <a href="/hospitals/<%= pdrequest._id %>/add-patient-data"><i class="pencil icon"></a></i>
                                <% } else { %>
                                    <span style="color: brown;">closed</span>
                                    <% } %>
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>



    </div>
    </div>

    </header>

    <%- include("partials/userNextFooter") %>
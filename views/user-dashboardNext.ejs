<%- include("partials/header2") %>

    <h1 class="ml5">
        <span class="text-wrapper">
      <span class="line line1"></span>
        <span class="letters letters-left"><i>Hello</i></span>
        <span class="letters ampersand">&#187;</span>
        <span class="letters letters-right">User</span>
        <span class="line line2"></span>
        </span>
    </h1>
    <!-- <h1 style="text-align: center; color:darkorange">Scroll Down to see patient Data.</h1> -->-->

    <div class="tab">
        <div class="ui dimmer" id="dimmer">
            <div class="ui massive text loader">
                <h5>Waiting for your QR code to be generated...</h5>
            </div>
        </div>
        <div style="margin: 0 auto; text-align: center;" class="ui card">
            <div class="content">
                <div style="color: darkcyan;" class="header"><i style="color: orangered;" class="user icon"></i>
                    <%= user.name%>
                </div>
            </div>
            <div class="content">
                <h4 style="color:blue;" class="ui sub header">Email</h4>
                <div class="ui small feed">
                    <div class="event">
                        <div class="content">
                            <div style="color: salmon; text-align: center;" class="summary">
                                <%= user.email%>
                            </div>
                        </div>
                    </div>
                </div>
                <h4 style="color: maroon;" class="ui sub header">Public Key</h4>
                <div class="ui small feed">
                    <div class="event">
                        <div class="content">
                            <div style="color: goldenrod; text-align: center;" class="summary">

                                <%= user.publicKey%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="background: white; border: 1px solid black; border-radius: 15px;" class="ui middle aligned divided list">
            <div style="padding: 10px;" class="item">
                <div style="color:yellowgreen" class="right floated content">
                    Request Time
                </div>
                <div style="color:red" class="left floated content">
                    Hospital Name
                </div>
                <div style="text-align: center;color:green" class="middle floated content">
                    Status
                </div>
            </div>

            <div style="padding: 10px;" class="item">
                <div class="right floated content">
                    <%=  pdRequest.createdAt%>
                </div>
                <!-- <div class="right floated content">
                    <div class="ui button">Add</div>
                </div> -->
                <div style="color:lightblue" class="left floated content">
                    <%= pdRequest.hospital.name%>
                </div>

                <div style="text-align: center; color: green;" class="middle floated content">
                    <%= pdRequest.isApproved%>
                </div>
            </div>
        </div>
        <div id="qr" onclick="$('.ui.basic.modal.mod1').modal('show');" class="ui right circular floated huge blue labeled icon button">
            <i class="code icon"></i> Generate Qr Code
        </div>

    </div>
    </div>
    <div style="margin: 0 auto;" class="ui basic modal mod1">
        <div class="ui icon header">
            <i class="lock icon"></i><span style="font-size: 1.5em;">Enter Password</span>
        </div>
        <div style="text-align: center;" class="content">
            <p style="color: red; font-size: 2em;">Plase enter your password to to securely decrypt your private keys and generate the QR code.</p>
            <div style="display: flex; justify-content: center;">
                <div class="ui left icon input"><input style="background: transparent; color: white; border: none;" id="pwd" style="padding: 0;" aria-invalid="true" placeholder="Enter Password" name="password" type="password" value=""><i aria-hidden="true" style="color: white;" class="lock icon"></i>
                </div>
            </div>
        </div>
        <div style="text-align: center;" class="actions">
            <input type="hidden" value="<%= user.email %>"id="email" >
            <button class="ui pink basic ok inverted  button" onclick="getQR()" ><i class="checkmark icon"></i>Generate QR Code</button>
        </div>
    </div>
    <div style="margin: 0 auto;" class="ui basic modal mod2">
        <div class="ui icon header">
            <i class="code icon"></i><span style="font-size: 1.5em;">Your OR Code</span>
        </div>
        <div style="text-align: center;" class="content">
            <canvas id="canvas"></canvas>
        </div>
        <div style="text-align: center;" class="actions">
            <button class="ui red basic ok inverted  button"><i class="remove icon"></i>Close
            </button>
        </div>
    </div>
    </div>
    </header>

    <%- include("partials/userNextFooter") %>
                        <% if (pdRequest.isApproved) { %>
                            <span style="color:green">
                            <%= pdRequest.isApproved%><i style="color: green;"class="checkmark icon"></i>
                        </span>
                            <% } else { %>
                                <span style="color:red">
                                <%= pdRequest.isApproved%><i style="color: red;"class="remove icon"></i>
                            </span>
                                <% } %>
                    </div>
                </div>
                <br>
                <div class="requestTime">
                    <div style="font-size: 1.2em;"> Request Time:
                        <span style="color:#379683">
                            <%= pdRequest.createdAt %>
                        </span>
                    </div>
                </div>
            </div>
            <div style="border-radius: 20px;" class="card-action">
